{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2023",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@nestjs/*": ["node_modules/@nestjs/*"],
      "@types/*": ["node_modules/@types/*"]
    },
    "incremental": true,
    "outDir": "./dist"
  }
}
