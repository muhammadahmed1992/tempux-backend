{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2023",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@nestjs/*": ["node_modules/@nestjs/*"],
      "@types/*": ["node_modules/@types/*"],
      "@API-Gateway/*": ["api-gateway/src/*"],
      "@Auth/*": ["auth-service/src/*"],
      "@Product/*": ["product-service/src/*"],
      "@Buyer/*": ["order-service/src/*"],
      "@Seller/*": ["seller-service/src/*"]
    },
    "incremental": true,
    "outDir": "./dist"
  }
}
