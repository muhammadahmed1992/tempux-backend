{
  "compilerOptions": {
    "types": ["node"],
    "lib": ["es2020"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2023",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@Config/*": ["src/config/*"],
      "@Common/*": ["src/common/*"],
      "@Helper/*": ["src/common/helper/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "ecosystem.config.js", "dist"]
}
