{
  "name": "backend-monorepo",
  "private": true,
  "workspaces": [
    "api-gateway",
    "auth-service",
    "order-service",
    "product-service",
    "seller-service"
  ],
  "scripts": {
    "lint": "eslint '*/src/**/*.{ts,tsx,js,jsx}' --fix",
    "format": "prettier --write '*/src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "start:api-gateway": "npm --prefix api-gateway run start:dev",
    "start:auth-service": "npm --prefix auth-service run start:dev",
    "start:product-service": "npm --prefix product-service run start:dev",
    "start:order-service": "npm --prefix order-service run start:dev",
    "start:seller-service": "npm --prefix seller-service run start:dev",
    "start:all": "concurrently -n gateway,auth,product,order,seller -c blue,green,magenta,cyan,red \"npm run start:api-gateway\" \"npm run start:auth-service\" \"npm run start:product-service\" \"npm run start:order-service\" \"npm run start:seller-service\"",
    "debug:api-gateway": "npm --prefix api-gateway run start:debug",
    "debug:auth-service": "npm --prefix auth-service run start:debug",
    "debug:product-service": "npm --prefix product-service run start:debug",
    "debug:order-service": "npm --prefix order-service run start:debug",
    "debug:seller-service": "npm --prefix seller-service run start:debug",
    "debug:all": "concurrently -n gateway,auth,product,order,seller -c blue,green,magenta,cyan,red \"npm run debug:api-gateway\" \"npm run debug:auth-service\" \"npm run debug:product-service\" \"npm run debug:order-service\" \"npm run debug:seller-service\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "globals": "^16.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^2.8.8",
    "prisma": "^6.11.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{json,css,md}": [
      "npx prettier --write"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@prisma/client": "^6.11.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  }
}
